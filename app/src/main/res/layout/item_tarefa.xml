<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_item_size"
    android:padding="@dimen/list_item_padding">

    <CheckBox
        android:id="@+id/cbTarefaConcluida"
        android:layout_width="@dimen/list_item_content_size"
        android:layout_height="@dimen/list_item_content_size"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:button="@drawable/tarefa_checkbox_selector"/>

    <TextView
        android:id="@+id/tvDescricaoTarefa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TÃ­tulo"
        android:textSize="@dimen/text_list_item_primary"
        android:layout_toEndOf="@+id/cbTarefaConcluida"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="13/11/2019 23:00"
        android:layout_toEndOf="@+id/cbTarefaConcluida"
        android:layout_alignParentBottom="true"
        android:textSize="@dimen/text_list_item_secondary"
        android:textColor="@color/colorGrayDark"/>

    <ImageView
        android:layout_width="@dimen/list_item_content_size"
        android:layout_height="@dimen/list_item_content_size"
        android:src="@drawable/ic_account_circle_black_24dp"
        android:layout_alignParentEnd="true"/>

